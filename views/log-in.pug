extends ./application.pug
block content
  h3(id="loginheader") Login
  div(class="row")
    form(id="login" class="col s6 z-depth-1 grey lighten-4 row" action="/log-in" method="post")
      div(class="row")
        div(class="col s6" id="inputs")
          label(for="username") Username
          input(placeholder="Your username" name="username" id="username" type="text" class="validate")
          label(for="password") Password
          input(placeholder="Your password" name="password" id="password" type="password" class="validate")
      button(class="btn waves-effect waves-light" type="submit" name="action") Submit
        i(class="material-icons right")
