extends ./application.pug
block content
  .card.blue-grey.darken-1
    h4(class="card-title") Title:  #{post.title}
    p(class="card-text") Message: #{post.body}
    p(class="card-text") User: #{post.userId}
    ul
      if(post.comments)
        each comment in post.comments
          li(class="card-text") Comments: #{comment.body}
          li(class="card-text") User: #{comment.userId}

  form(class="col s12" action="/add-comment" method="post")
    div(class="row")
      div(class="col s6")
        input(placeholder="Comment" name="body" id="comment" type="text" class="validate")
        input(type='number', name="currentpostId", value=post.id hidden)
        label(for="email") Add comment
    button(class="btn waves-effect waves-light" type="submit" name="action") Submit
      i(class="material-icons right")
