extends ./application.pug
block content
  h1 Register as a new user!

  div(class="row")
  form(class="col s12" action="/register" method="post")
    div(class="row")
      div(class="col s6")
        label(for="email") Email
        input(placeholder="Your e-mail" name="email" id="email" type="email" class="validate")
        label(for="username") Username
        input(placeholder="your name" name="username" id="username" type="text" class="validate")
        label(for="password") Password
        input(placeholder="Your password" name="password" id="password" type="password" class="validate")
    button(class="btn waves-effect waves-light" type="submit" name="action") Submit
      i(class="material-icons right")
