extends ./application.pug
block content
  h3 Hello, #{user.username}! These are your posts:
  ul
    each post in user.posts
      .card
        li(class="card-title") Title:  #{post.title}
        p(class="card-text") Message: #{post.body}
        form(class="col s12" action="/delete" method="delete")
          button(class="btn waves-effect waves-light" type="submit" name="action") DELETE
            i(class="material-icons right")
        form(class="col s12" action="/edit" method="put")
          button(class="btn waves-effect waves-light" type="submit" name="action") EDIT
            i(class="material-icons right")
